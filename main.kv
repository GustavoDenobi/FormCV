<ManageConsultant>:
    FloatLayout:
        FloatLayout:
            size_hint: (1, .1)
            pos_hint: {'center_x': 0.5, 'y': 0.9}
            canvas:
                Color:
                    rgba: (1,1,1,0.1)
                Rectangle:
                    pos: self.pos
                    size: self.size        
                    
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Gerenciar Consultores"
                font_size: '30sp'
                    
            Button:
                size_hint: (0.1, 0.33)
                pos_hint: {'x': 0.01, 'center_y': 0.5}
                text: 'Voltar'
                on_release:
                    root.manager.current = "mainmenu"
        
        Label:
            size_hint: (.9,.2)
            pos_hint: {'center_x': 0.5, 'y': 0.75}
            text: 'Insira os dados do consultor e clique em "Adicionar Consultor'
                        
        
        BoxLayout:
            size_hint: (.9, .3)
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                size_hint: (0.125,1)
                
                Label:
                    text: 'RA'
                Label:
                    text: 'Nome'
                Label:
                    text: 'Consultoria'
                    
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                    
                TextInput:
                    hint_text: 'Numeros apenas'
                    on_text: root.bindRA(self.text)
                TextInput:
                    on_text: root.bindNOME(self.text)
                TextInput:
                    on_text: root.bindCONSULT(self.text)
                                          
        Button:
            size_hint: (0.2, 0.06125)
            pos_hint: {'center_x': 0.5, 'center_y': .45}
            text: "Adicionar Consultor"
            on_press:
                root.runAddConsultant()

        Label:
            size_hint: (.9,.1)
            pos_hint: {'center_x': 0.5, 'y': 0.3}
            text: 'Insira o RA e clique em "Remover Consultor" para remover o consultor do banco de dados.'
            
        BoxLayout:
            size_hint: (.9, .08)
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                size_hint: (0.125,1)
                
                Label:
                    text: 'RA'
                    
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                    
                TextInput:
                    hint_text: 'Numeros apenas'
                    on_text: root.bindRA(self.text)
                    
        Button:
            size_hint: (0.2, 0.06125)
            pos_hint: {'center_x': 0.5, 'center_y': .15}
            text: "Remover Consultor"
            on_press:
                root.runDelConsultant()

