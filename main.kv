#:import os os
            
<MainMenu>:
    FloatLayout:
        canvas:
            Color:
                rgba: (1,1,1,0.2)
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            size_hint: (0.33, 0.125)
            pos_hint: {'center_x': 0.3, 'center_y': .25}
            text: "Ler arquivos da pasta..."
            on_press: 
                root.manager.current = "rmfmenu"
        Button:
            size_hint: (0.33, 0.125)
            pos_hint: {'center_x': 0.7, 'center_y': .25}
            text: "Ler apenas um arquivo..."
            on_release:
                root.manager.current = "rsfmenu"
        BoxLayout:
            size_hint: (1, 0.125)
            pos_hint: {'center_x': 0.5, 'center_y': 0.05}
            
            Button:
                text: 'Configurar'
                on_release:
                    root.manager.current = "options"
            Button:
                text: 'Gerar Certificados'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_release:
                    root.manager.current = "gencertificate"
            Button:
                text: 'Gerenciar Consultores'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_release:
                    root.manager.current = "manconsult"
            Button:
                text: 'Relatorio'
                on_release:
                    root.manager.current = "errorlog"
            Button:
                text: 'Sobre'
                on_release:
                    root.manager.current = "credit"
        Image:
            source: 'formcv.png'
            size_hint: (0.8, None)
            pos_hint: {'center_x': .5, 'center_y': 0.66}
            
<Options>:
    FloatLayout:
         
        FloatLayout:
            size_hint: (1, .1)
            pos_hint: {'center_x': 0.5, 'y': 0.9}
            canvas:
                Color:
                    rgba: (1,1,1,0.1)
                Rectangle:
                    pos: self.pos
                    size: self.size        
                    
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Configurar"
                font_size: '30sp'
                    
            Button:
                size_hint: (0.1, 0.33)
                pos_hint: {'x': 0.01, 'center_y': 0.5}
                text: 'Voltar'
                on_release:
                    root.manager.current = "mainmenu"

        FloatLayout:
            size_hint: (.9, 0.3)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 12
            
            canvas:
                Color:
                    rgba: (1,1,1,0.2)
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                size_hint: (0.3, 1)
                pos_hint: {'x': 0.0, 'y': 0.0}
                Label:
                    text: "Banco de dados: "
                    halign: 'center'
                Label:
                    text: "Pasta de imagens: "
                    halign: 'center'
                Label:
                    text: "Saida para certificados: "        
                    halign: 'center'
                    
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                size_hint: (0.6, 1)
                pos_hint: {'x': 0.25, 'y': 0.0}
                canvas:
                    Color:
                        rgba: (1,1,1,0.6)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    text: root.text.dbDir
                    color:  [0,0,0,0.5]
                Label:
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    text: root.text.imgDir
                    color:  [0,0,0,0.5]
                Label:
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    text: root.text.outputDir
                    color:  [0,0,0,0.5]
                    
            BoxLayout:
                spacing: 12
                orientation: 'vertical'
                size_hint: (0.1, 1)
                pos_hint: {'center_x': 0.925, 'y': 0.0}
                Button:
                    text: 'Alterar'
                    on_release:
                        root.show_load_database()
                Button:
                    text: 'Alterar'
                    on_release:
                        root.show_load_imgDir()                    
                Button:
                    text: 'Alterar'
                    on_release:
                        root.show_load_output()
                        
<ChangeDatabaseDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.cancel()

            Button:
                text: "Carregar"
                on_release: root.loadDatabase(filechooser.path, filechooser.selection)

