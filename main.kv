<GenerateCertificate>:
    FloatLayout:
        FloatLayout:
            size_hint: (1, .1)
            pos_hint: {'center_x': 0.5, 'y': 0.9}
            canvas:
                Color:
                    rgba: (1,1,1,0.1)
                Rectangle:
                    pos: self.pos
                    size: self.size        
                    
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Gerar Certificados"
                font_size: '30sp'
                    
            Button:
                size_hint: (0.1, 0.33)
                pos_hint: {'x': 0.01, 'center_y': 0.5}
                text: 'Voltar'
                on_release:
                    root.manager.current = "mainmenu"
                    
        Label:
            size_hint: (.9,.2)
            pos_hint: {'center_x': 0.5, 'y': 0.75}
            text: 'Selecione 2 meses e clique em "Gerar Certificados"'
            
        BoxLayout:
            size_hint: (0.5, .1)
            pos_hint: {'center_x': 0.5, 'y': 0.5}
                    
            Spinner:
                id: firstmonth
                text: "Selecione"
                values: ['JAN','FEV','MAR','ABR','MAI','JUN','JUL','AGO','SET','OUT','NOV','DEZ']
                on_text: root.bindm1(self.text)
            Spinner:
                id: secondmonth
                text: "Selecione"
                values: ['JAN','FEV','MAR','ABR','MAI','JUN','JUL','AGO','SET','OUT','NOV','DEZ']
                on_text: root.bindm2(self.text)

        Button:
            size_hint: (0.33, 0.125)
            pos_hint: {'center_x': 0.5, 'center_y': .25}
            text: "Gerar Certificados"
            on_press:
                root.generateCertificate()
    
            
